<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.opentsdb</groupId>
  <artifactId>opentsdb-clients</artifactId>
  <name>OpenTSDB Clients</name>
  <version>2.4.0-SNAPSHOT</version>
  <description>A set of simple opentsdb submission clients implementing various protocols</description>
  <url>https://github.com/nickman/opentsdb-clients</url>
  <licenses>
    <license>
      <name>LGPLv3</name>
      <url>https://github.com/nickman/opentsdb-clients/blob/master/LICENSE</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <organization>
    <name>The OpenTSDB Authors</name>
    <url>http://opentsdb.net</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-eclipse-plugin</artifactId>
        <version>${eclipse-plugin.version}</version>
        <configuration>
          <downloadJavadocs>true</downloadJavadocs>
          <downloadSources>true</downloadSources>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${compiler-plugin.version}</version>
        <configuration>
          <source>${project.source}</source>
          <target>${project.source.target}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${surefire-plugin.version}</version>
        <configuration>
          <redirectTestOutputToFile>true</redirectTestOutputToFile>
          <parallel>classes</parallel>
          <threadCount>12</threadCount>
          <reuseForks>false</reuseForks>
          <systemPropertyVariables />
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>${jar-plugin.version}</version>
        <configuration>
          <archive>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
              <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
            </manifest>
            <manifestEntries />
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>${source-plugin.version}</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>${javadoc-plugin.version}</version>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <additionalparam>-Xdoclint:none</additionalparam>
          <quiet>true</quiet>
          <validateLinks>true</validateLinks>
          <bottom>Copyright Â© {inceptionYear}-{currentYear},
            ${project.organization.name}</bottom>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${shade.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>false</minimizeJar>
              <artifactSet>
                <includes>
                  <include>*:*</include>
                </includes>
              </artifactSet>
              <transformers>
                <transformer />
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <javadoc-plugin.version>2.8.1</javadoc-plugin.version>
    <compiler-plugin.version>2.5.1</compiler-plugin.version>
    <shade.version>2.1</shade.version>
    <jar-plugin.version>2.4</jar-plugin.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.source.target>1.8</project.source.target>
    <junit.version>4.11</junit.version>
    <netty.version>4.1.6.Final</netty.version>
    <logback-classic.version>1.0.13</logback-classic.version>
    <slf4j.version>1.7.7</slf4j.version>
    <guava.version>18.0</guava.version>
    <surefire-plugin.version>2.16</surefire-plugin.version>
    <source-plugin.version>2.1.2</source-plugin.version>
    <jackson.version>2.8.7</jackson.version>
    <logback-core.version>1.0.13</logback-core.version>
    <project.source>1.8</project.source>
    <metrics.version>3.2.0</metrics.version>
    <eclipse-plugin.version>2.9</eclipse-plugin.version>
  </properties>
</project>

